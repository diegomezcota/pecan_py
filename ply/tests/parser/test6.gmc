// Testeo de la presencia de parameters y hyper exp loops (clases, funciones)
program test6;

class Animal {
    var string name;
    var string color;
    var bool isOviparo;
    var int speed_limit;
    function makeSound() returns void; // sin parámetros
    function run(int speed) returns bool; // con parámetros
};

// sin parámetros
constructor Animal() {
    name = "N/A";
    color = "N/A";
    isOviparo = "N/A";
    speed_limit = 10;
}

@class Animal function makeSound() returns void {
    write("Grrrrr");
}

@class Animal function run(int s) returns bool {
    return s > speed_limit;
}

