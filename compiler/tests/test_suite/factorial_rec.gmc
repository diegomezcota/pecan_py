program fact;

function fact(int n) returns int {
    var int ans;
    if (n < 1) {
        ans = 1;
    } else {
        ans = n * fact(n - 1);
    }
    return ans;
}

main() {
    var int i;
    var int n;
    write("Ingresa el numero de factorial a calcular");
    read(n);
    write("El resultado del factorial es:");
    write(fact(n));
}